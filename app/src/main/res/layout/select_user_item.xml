<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/intendant_setting">

    <TextView
        android:id="@+id/name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp" />


    <LinearLayout
        android:id="@+id/ly_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="邮箱："
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/out_email"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            tools:ignore="DuplicateIds" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_email"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/identity"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="身份："
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/out_identity"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            tools:ignore="DuplicateIds" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ly_telephone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_identity"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/telephone_number"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="电话号码："
            tools:ignore="DuplicateIds" />

        <TextView
            android:id="@+id/out_telephone_number"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            tools:ignore="DuplicateIds" />
    </LinearLayout>


</RelativeLayout>